{
  "name": "claudepod",
  "version": "1.0.0",
  "description": "Mobile-first PWA for monitoring and interacting with Claude Code sessions remotely",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:managed": "bash scripts/start.sh",
    "dev": "node --watch server.js",
    "test": "node --test test/*.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "test:pty": "node test/pty-test.js",
    "test:all": "npm run test && npm run test:pty"
  },
  "keywords": [
    "terminal",
    "claude",
    "tmux",
    "pwa",
    "mobile",
    "remote"
  ],
  "author": "Tom Stetson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomstetson/claudepod.git"
  },
  "bugs": {
    "url": "https://github.com/tomstetson/claudepod/issues"
  },
  "homepage": "https://github.com/tomstetson/claudepod#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "node-pty": "^1.1.0",
    "ws": "^8.16.0"
  }
}
